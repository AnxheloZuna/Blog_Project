@model Blog_Project.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<style>

    .form-horizontal {
        width: 50%;
        padding: 20px 50px;
        margin: auto;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn1 {
        width: 50%;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        background-color: #EEA47F;
        color: #fff;
        cursor: pointer;
    }

    .btn:hover {
        background-color: #c82333;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="section">
        <div class="form-horizontal">
            <h2>Login</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label for="Username" class="control-label col-md-2">Username</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", id = "UsernameInput", autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="Password" class="control-label col-md-2">Password</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", id = "PasswordInput", autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn" style=" width: 100%; padding: 10px 20px; border: none; border-radius: 4px; background-color: #1995AD; color: #fff; cursor: pointer;" />
                </div>
            </div>
            <div>
                <a href="@Url.Action("Signup","Account")">
                    Don't have an account? Register
                </a>
            </div>
        </div>
    </div>
}
<br />


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
