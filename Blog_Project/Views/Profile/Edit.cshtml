@model Blog_Project.Models.Users_Table

<style>

    .form-horizontal {
        width: 70%; /* Set the desired width of the form */
        padding: 20px 50px;
        margin: auto;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn1 {
        width: 50%;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        background-color: #EEA47F;
        color: #fff;
        cursor: pointer;
    }

    .btn:hover {
        background-color: #c82333;
    }
</style>

<img src="~/img/reply.png" /><a href="javascript:void(0);" onclick="history.back();">Go Back</a>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="section">
        <div class="form-horizontal">
            <div style="display:flex;">
                <img src="~/img/pen_1250925.png" width="24" height="24" />&nbsp;&nbsp; <h4>Modifiko Profilin</h4>
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.UserId)

            <div class="form-group">
                <label for="Username" class="control-label col-md-2">Emri</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CreatedBy, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CreatedBy, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="Password" class="control-label col-md-2">Fjalekalimi</label>
                <div class="col-md-10">
                    <input type="password" name="Password" placeholder="Vendos fjalekalimin..." class="form-control text-danger" required />
                </div>
            </div>
            <div class="form-group">
                <label for="ConfirmPassword" class="control-label col-md-2">Fjalekalimi</label>
                <div class="col-md-10">
                    <input type="password" name="ConfirmPassword" placeholder="Konfirmo fjalekalimin..." class="form-control text-danger" required />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ruaj" class="btn" style="background-color: #1995AD;color:white; width: 50%; border-radius: 15px; align-content: center; margin-left: 20%;" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
